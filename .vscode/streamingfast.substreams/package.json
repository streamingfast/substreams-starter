{
  "name": "substreams",
  "displayName": "Substreams",
  "description": "Substreams Developer Environment Extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Data Science",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:substreams.yaml",
    "workspaceContains:substreams.yml"
  ],

  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "substreams-sf.helloWorld",
      "title": "Hello World"
    }]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
